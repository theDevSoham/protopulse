<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title><%= title %></title>
    <style>
      body {
        font-family: Arial, sans-serif;
        padding: 2rem;
        background-color: #f9f9f9;
      }

      h2 {
        margin-top: 2rem;
        color: #333;
        border-bottom: 2px solid #ddd;
        padding-bottom: 0.5rem;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 1rem;
        background-color: #fff;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      }

      th,
      td {
        border: 1px solid #ccc;
        padding: 0.75rem;
        text-align: left;
        vertical-align: top;
      }

      th {
        background-color: #f2f2f2;
        font-weight: bold;
      }

      tr:nth-child(even) {
        background-color: #f9f9f9;
      }

      .json {
        font-family: monospace;
        white-space: pre-wrap;
      }

      .scroll-box {
        max-height: 200px;
        overflow: auto;
        background: #f4f4f4;
        padding: 0.5rem;
        border-radius: 4px;
        border: 1px solid #ddd;
      }
    </style>
  </head>
  <body>
    <h1><%= title %></h1>

    <!-- JSON Table -->
    <h2>Raw JSON Data</h2>
    <table>
      <thead>
        <tr>
          <% Object.keys(jsonData[0]).forEach(key => { %>
          <th><%= key %></th>
          <% }) %>
        </tr>
      </thead>
      <tbody>
        <% jsonData.forEach(item => { %>
        <tr>
          <% Object.entries(item).forEach(([key, value]) => { %>
          <td class="json">
            <% if (typeof value === 'object') { %>
            <div class="<%= key === 'evidences' ? 'scroll-box' : '' %>">
              <%= JSON.stringify(value, null, 2) %>
            </div>
            <% } else { %> <%= value %> <% } %>
          </td>
          <% }) %>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </body>
</html>
